INCDIR = ../include
LIBDIR = ../lib
G2DIR  = ../3dfx/glide
G2LIB  = glide2x.dxe
G3DIR  = ../3dfx/glide3
G3LIB  = glide3x.dxe
#build for glide3x :
GLIDE3 = 1

GL_LIB = libgl.a
GL_DXE = gl.dxe
GL_IMP = libigl.a
LIBNAME="fxMesa-v3.4"
DXE_EXPORTS= -E _gl -X _gl_ -X _glb
DXE_EXPORTS+= -E _fxMesa -E _fxQueryHardware -E _fxCloseHardware -E _fxGetScreenGeometry

CC = gcc
AR = ar

CFLAGS = -DFX
ifneq ($(GLIDE3),1)
GLIDEDIR=$(G2DIR)
GLIDELIB=$(G2LIB)
else
GLIDEDIR=$(G3DIR)
GLIDELIB=$(G3LIB)
CFLAGS+= -DFX_GLIDE3
endif
DXE_DEPS= -P $(GLIDELIB)

CFLAGS+= -O2 -mtune=i586 -ffast-math -fomit-frame-pointer \
	-DUSE_X86_ASM -DUSE_MMX_ASM -DUSE_3DNOW_ASM -DUSE_KATMAI_ASM -IFX/X86 \
	-I$(GLIDEDIR)/include -I. -I$(INCDIR)
CFLAGS+= -DNDEBUG

ARFLAGS = rus

