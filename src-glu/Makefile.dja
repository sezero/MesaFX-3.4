INCDIR  =   ../include
LIBDIR  =   ../lib
include ../common.dja

SOURCES =   glu.c mipmap.c nurbs.c nurbscrv.c nurbssrf.c nurbsutl.c \
	polytest.c project.c quadric.c tess.c tesselat.c

OBJECTS =   $(SOURCES:.c=.o)


default: $(GLU_LIB)

$(GLU_LIB): $(OBJECTS)
	$(AR) rus $(GLU_LIB) $?

include depend

clean:
	$(RM) *.o

