include common.dja

.PHONY : all libs samples clean realclean

default: all

all: libs samples

libs:
	mkdir lib
	cd src ;          $(MAKE) -f Makefile.dja ; cd ..
	cd src-glu ;      $(MAKE) -f Makefile.dja ; cd ..
	cd src-glut.dja ; $(MAKE) -f Makefile.dja ; cd ..

samples:
	cd samples;       $(MAKE) -f Makefile.dja ; cd ..


clean:
	$(RM) src\*.o
	$(RM) src-glu\*.o
	$(RM) src-glut.dja\*.o

realclean: clean
	$(RM) lib\*.a
	$(RM) samples\*.exe
