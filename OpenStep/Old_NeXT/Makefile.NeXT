##### MACROS #####

INCDIR = ../include

GL_LIBS = generic.m -L../lib -lMesaaux -lMesatk -lMesaGLU -lMesaGL $(XLIBS)

LIB_DEP = ../lib/$(GL_LIB) ../lib/$(GLU_LIB) ../lib/$(TK_LIB) ../lib/$(AUX_LIB)

PROGS = alpha3D chess cone_ball material tea teapots texgen nurbs surface\
		checker checker2 dof texturesurf sphere cone font model disk

all: generic.o $(PROGS)

##### RULES #####

SUFFIXES: .m

.m: $(LIB_DEP)
	$(CC) -I$(INCDIR) $(CFLAGS) $< $(GL_LIBS) -o $@

generic.o:
	$(CC) -c -I$(INCDIR) $(CFLAGS) $< -o $@

.c: $(LIB_DEP) generic.o
	$(CC) -I$(INCDIR) $(CFLAGS) $< $(GL_LIBS) -o $@


##### TARGETS #####

default:
	@echo "Specify a target configuration"

clean:
	-rm *.o *~
	-rm -f $(PROGS)

realclean: clean

targets: $(PROGS)

include ../Make-config

